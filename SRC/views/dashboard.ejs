<!--Left sidebar-->
<div class="full_sidebar">
    <div class="material_top">
        <div class="post_icon">
            <a href="/">
                <div class="seeker">
                    <img class="logo1"
                         src="https://vitamin2001.in/softengg/SeekPng%201.png"
                         alt="">
                    <h2 class="post_text">Post-It</h2>
                </div>
        </div>
        </a>
        <div class="explore">
            <img class="logo2"
                 src="https://vitamin2001.in/softengg/compass.png"
                 alt="">
            <h2 class="explore_text">Explore</h2>
        </div>
        <div class="settings">
            <img class="logo3"
                 src="https://vitamin2001.in/softengg/settings.png"
                 alt="">
            <h2 class="settings_text">Settings</h2>
        </div>
    </div>
    <div class="material_down">
        <div class="name_bigbox">
            <img class="placehold_image"
                 src="https://vitamin2001.in/softengg/P1120783.JPG"
                 alt="img not available">
            <div class="name_container">
                <!-- Flash Message -->
                <% if (message && message.length > 0) { %>
                    <div id="flashDiv" class="flash welcome">
                        <%= message %>
                    </div>
                <% } %>
                <% if (message2 && message2.length > 0) { %>
                    <div id="flashDiv" class="flash welcome">
                        <%= message2 %>
                    </div>
                <% } %>
            </div>
        </div>
        <div class="tag_container">
            @Ranadheer123
            <br><a id="signinLink" href="/logout">Log out</a>
        </div>
    </div>
</div>

<!--right side sidebar-->


<div class="right_sidebar">
    <div class="r_material_top">
        <div class="search_bar">
            <div class="search">
                <img class="r_logo1"
                     src="https://vitamin2001.in/softengg/search.png"
                     alt="">
                <h2 class="search_text">Search</h2>
            </div>
        </div>
        <div class="trending">
            <img class="r_logo2"
                 src="https://vitamin2001.in/softengg/Vector%20%282%29.png"
                 alt="">
            <h2 class="trending_text">Trending</h2>
        </div>
        <div class="r_material_down">
            <div class="bigbox">
                <div class="one_text">
                    One Piece is going to end in 5 years!! : Echiro Oda
                </div>
                <img class="r_placehold_image"
                     src="https://vitamin2001.in/softengg/wanpisu.jpg"
                     alt="img not available">
            </div>
        </div>
    </div>
</div>


