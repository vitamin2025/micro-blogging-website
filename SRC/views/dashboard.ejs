<div class="full_sidebar">
    <div class="material_top">
        <div class="post_icon">
            <div class="seeker">
                <img class="logo1" src="../public/images/SeekPng1.png" alt="">
                <h2 class="post_text">Post-It</h2>
            </div>
        </div>
        <div class="explore">
            <img class="logo2" src="../public/images/compass.png" alt="">
            <h2 class="explore_text">Explore</h2>
        </div>
        <div class="settings">
            <img class="logo3" src="../public/images/settings.png" alt="">
            <h2 class="settings_text">Settings</h2>
        </div>
    </div>
    <div class="material_down">
        <div class="name_bigbox">
            <img class="placehold_image" src="../public/images/P1120783.JPG" alt="img not available">
            <div class="name_container">
                <!-- Flash Message -->
                <% if (message && message.length > 0) { %>
                    <div id="flashDiv" class="flash welcome">
                        <%= message %>
                    </div>
                <% } %>
                <% if (message2 && message2.length > 0) { %>
                    <div id="flashDiv" class="flash welcome">
                        <%= message2 %>
                    </div>
                <% } %>
            </div>
        </div>
        <div class="tag_container">
            @Ranadheer123
            <br><a id="signinLink" href="/logout">Log out</a>
        </div>
    </div>
</div>
