    <!--Display Posts-->

    <% if (blogs.length == 0) { %>
        <h1 id="noBlogH1">Sorry!! No Blogs Found!!</h1>
    <% } else { %>

        <% blogs.forEach(function(blog){ %>
            <div class="container">
                <div class="box_2">
                    <div class="pic_total">
                        <img src="https://vitamin2001.in/softengg/P1120783.JPG"
                             alt="img" class="placehold_image">
                        <div class="namebox">
                            <div class="pic_name">
